# PayTrust Test Environment Configuration
# Copy this file to .env.test and update with your test credentials

# Database Configuration
DATABASE_URL=mysql://root:password@localhost:3306/paytrust_test

# Server Configuration  
SERVER_HOST=127.0.0.1
SERVER_PORT=8081
SERVER_WORKERS=2

# Payment Gateway Test Credentials
# Xendit Test Mode (sandbox)
XENDIT_TEST_API_KEY=xnd_development_YOUR_TEST_KEY_HERE
XENDIT_TEST_MODE=true

# Midtrans Sandbox
MIDTRANS_SERVER_KEY=YOUR_MIDTRANS_SANDBOX_SERVER_KEY
MIDTRANS_CLIENT_KEY=YOUR_MIDTRANS_SANDBOX_CLIENT_KEY
MIDTRANS_SANDBOX=true

# Test Gateway Configuration
TEST_GATEWAY_ID=test-gateway-001
TEST_API_KEY=test_api_key_001

# Logging
RUST_LOG=info,paytrust=debug,sqlx=warn,actix_web=info

# Test-Specific Settings
TEST_CLEANUP_ENABLED=true
TEST_PARALLEL_ENABLED=true
TEST_TRANSACTION_ISOLATION=true
